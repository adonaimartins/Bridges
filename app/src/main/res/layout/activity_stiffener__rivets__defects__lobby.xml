<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stiffener_Rivets_Defects_Lobby">


    <LinearLayout
        android:id="@+id/statusContainer_p38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/status1_p38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="Deck1" />

        <TextView
            android:id="@+id/status2_p38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="Girder1" />
    </LinearLayout>


    <TextView
        android:id="@+id/title_stiffener_rivets_defects_p38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:text="@string/title_stiffener_rivets_defects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addButton_p38"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:onClick="addDefect"
        android:text="@string/buttonAddText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.856"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_stiffener_rivets_defects_p38" />

    <TextView
        android:id="@+id/tableTitle_p38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tableNameDefects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addButton_p38" />

    <TableLayout
        android:id="@+id/tableLayout4_p38"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:padding="10dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableTitle_p38"
        app:layout_constraintVertical_bias="0.0">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/idRowTitle_p38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_span="1"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ID" />

            <TextView
                android:id="@+id/typeRowTitle_p38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"

                android:layout_span="1"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Type of Error" />

            <TextView
                android:id="@+id/no_affected_p38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:gravity="center"

                android:layout_span="1"
                android:layout_weight="1"
                android:text="no.affected" />

            <TextView
                android:id="@+id/percentage_afected_p38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:gravity="center"

                android:layout_span="1"
                android:layout_weight="1"
                android:text="% loss" />

            <TextView
                android:id="@+id/textView58_p38"
                android:layout_width="wrap_content"
                android:layout_span="2"
                android:layout_column="3"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/idRow1_p38"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/errorTypeRow1_p38"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView70_p38"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />


            <Button
                android:id="@+id/deleteButton_p38"
                android:layout_width="90dp"

                android:layout_height="43dp"
                android:layout_weight="1"
                android:onClick="deleteDefect"
                android:text="@string/buttonDeleteText" />
        </TableRow>

    </TableLayout>

    <CheckBox
        android:id="@+id/completedButton_p38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="172dp"
        android:text="@string/checkboxCompletedText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout4_p38"
        app:layout_constraintVertical_bias="0.396" />

    <Button
        android:id="@+id/submitButton_p38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:onClick="submit"
        android:text="@string/buttonBubmitText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/completedButton_p38"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout4_p38"
        app:layout_constraintVertical_bias="0.996" />


</androidx.constraintlayout.widget.ConstraintLayout>