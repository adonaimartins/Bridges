<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="22dp">
    <TextView
        android:id="@+id/row_bridgeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="0sp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/row_bridge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="0sp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/row_bridge_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="0sp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/row_bridge_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="0sp"
        android:textSize="12sp" />

    <Button
        android:id="@+id/row_editBridge"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_column="4"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:padding="0sp"
        android:text="@string/table_button_edit"
        android:textSize="8sp" />
    <Button
        android:id="@+id/row_deleteBridge"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_column="5"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:padding="0sp"
        android:text="@string/table_button_del"
        android:textSize="8sp" />
</LinearLayout>