<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Decks_Lobby">

    <TextView
        android:id="@+id/title_bridge_name_p20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/title_bridge_name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/title_decks_p20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="@string/title_decks"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bridge_name_p20" />

    <Button
        android:id="@+id/buttonAdd_p20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="28dp"
        android:onClick="addDeck"
        android:text="@string/buttonAddText"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout_p20"
        app:layout_constraintEnd_toEndOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout_p20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_decks_p20"
        app:layout_constraintVertical_bias="0.168">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center">

            <TextView
                android:id="@+id/title_bridge_p20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="0sp"
                android:text="Deck Number"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView12_p20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0sp"
                android:text="Completed"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/label_structureName_p20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_weight="1"
                android:gravity="center"

                android:padding="0sp"
                android:text=""
                android:textSize="15dp" />

            <TextView
                android:id="@+id/label_surveior_name_p20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0sp"
                android:text=""
                android:textSize="15dp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center">

            <TextView
                android:id="@+id/textView11_p20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="0sp"
                android:text="1"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/checkBox_p20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="346dp" />

            <Button
                android:id="@+id/table_button_del_p20"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_column="4"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center"

                android:onClick="deleteDeck"
                android:padding="0sp"
                android:text="delete"
                android:textSize="10dp" />

            <Button
                android:id="@+id/table_button_edit_p20"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_column="5"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center"

                android:onClick="editDeck"
                android:padding="0sp"
                android:text="edit"
                android:textSize="10dp" />
        </TableRow>

    </TableLayout>

    <CheckBox
        android:id="@+id/checkboxCompletedText_p20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="48dp"
        android:text="@string/checkboxCompletedText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout_p20" />

    <Button
        android:id="@+id/button_submit_p20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="28dp"
        android:onClick="submit"
        android:text="@string/button_submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkboxCompletedText_p20"
        app:layout_constraintVertical_bias="0.675" />


</androidx.constraintlayout.widget.ConstraintLayout>