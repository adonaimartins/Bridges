<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CP_Defects_Form">

    <LinearLayout
        android:id="@+id/statusContainer_p13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/status1_p13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="Deck1" />

        <TextView
            android:id="@+id/status2_p13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="Girder1" />

    </LinearLayout>

    <TextView
        android:id="@+id/title_curtailment_plates_defects_p13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="@string/title_curtailment_plates_defects"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_curtailment_plates_defects_p13"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="50dp"
            android:paddingTop="25dp"
            android:paddingEnd="50dp"
            android:paddingBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/labelTypeOfDefect_p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_defect_type" />

                <Spinner
                    android:id="@+id/dropdownTypeOfDefect_p13"
                    android:layout_width="74dp"
                    android:layout_height="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/label_elevation_p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_elevation" />

                <Spinner
                    android:id="@+id/dropDown_elevation_p13"
                    android:layout_width="74dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/label_method_for_measurement_p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_method_for_measurement" />

                <Spinner
                    android:id="@+id/dropDown_method_for_measurement_p13"
                    android:layout_width="74dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/label_start_lenght_p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_start_lenght" />

                <EditText
                    android:id="@+id/input_start_lenght_p13"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <Spinner
                    android:id="@+id/inchesMilimetre1_p13"
                    android:layout_width="74dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/label_end_lenght_p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_end_lenght" />

                <EditText
                    android:id="@+id/input_end_lenght_p13"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <Spinner
                    android:id="@+id/inchesMilimetre2_p13"
                    android:layout_width="74dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/label_length_p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_length" />

                <EditText
                    android:id="@+id/input_length_p13"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <Spinner
                    android:id="@+id/inchesMilimetre3_p13"
                    android:layout_width="74dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/label_start_width_p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_start_width" />

                <EditText
                    android:id="@+id/input_start_width_p13"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/inchesMilimetre4_p13"
                    android:layout_width="74dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/label_end_width_p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_end_width" />

                <EditText
                    android:id="@+id/input_end_width_p13"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/inchesMilimetre5_p13"
                    android:layout_width="74dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">


                <TextView
                    android:id="@+id/label_width_p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_width" />

                <EditText
                    android:id="@+id/input_width_p13"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/inchesMilimetre6_p13"
                    android:layout_width="74dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/label_deph_p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_deph" />

                <EditText
                    android:id="@+id/input_deph_p13"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/inchesMilimetre7_p13"
                    android:layout_width="74dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonAdd_p13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:onClick="addDefect"
                android:text="@string/buttonAddText" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>